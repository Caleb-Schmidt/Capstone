{% extends './base.html.j2' %}
{% block content %}
    <div id="body">
        <header class="fixed-container col-3" id="left">
            {% include './includes/nav.html.j2' %}
        </header>
        <main class="container col-6" id="middle">
            {% for post in posts %}
            {% if post.img %}
            <div class="card">
                <img src="{{post.img}}" class="card-img-top" alt="image">
                <div class="card-body">
                    <h5 class="card-title">{{post.title}}</h5>
                    <p class="card-text">{{post.body}}</p>
                    <a class="card-link" href="{{url_for('main.edit_post', id=post.id)}}"><button class="btn btn-primary">Edit Post</button></a>
                    <a class="card-link" href="{{url_for('main.pending', id=post.id)}}"><button class="btn btn-primary">Delete Post</button></a>
                </div>
            </div>
            {% else %}
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{post.title}}</h5>
                    <p class="card-text">{{post.body}}</p>
                    <a class="card-link" href="{{url_for('main.edit_post', id=post.id)}}"><button class="btn btn-primary">Edit Post</button></a>
                    <a class="card-link" href="{{url_for('main.pending', id=post.id)}}"><button class="btn btn-primary">Delete Post</button></a>
                </div>
            </div>
            {% endif %}
            {% endfor %}
        </main>
        <footer class="fixed-container col-3 offset-9 " id="right">
            {% include './includes/nav2.html.j2' %}
        </footer>
    </div>
{% endblock %}